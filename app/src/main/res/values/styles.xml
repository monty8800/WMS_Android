<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/MyInterludeStyle</item>

    </style>
    <style name="MyInterludeStyle">
        <item name="android:activityOpenEnterAnimation">@transition/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@transition/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@transition/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@transition/slide_out_right</item>
    </style>
    <style name="tab_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/tab_menu_text</item>
        <item name="android:state_checked">false</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--设置的tab 的style-->
    <style name="set_tab_item">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_set_tab_check</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@mipmap/set_next_page</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:drawableLeft">@mipmap/set_userinfo_icon</item>
    </style>
    <!--入库的标题的style-->
    <style name="stock_in_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawableRight">@mipmap/tab_line_right</item>
        <item name="android:drawableLeft">@mipmap/tab_line_left</item>
        <item name="android:textColor">@color/home_in_lib</item>
    </style>
    <!--入库的快捷入口的style-->
    <style name="stock_in_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_set_tab_check</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">#333</item>
        <item name="android:drawableTop">@mipmap/stock_in_buy_order</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--Dialog的样式-->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#002a2a2a</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <!--分割线 view的样式-->
    <style name="LineDirection" parent="android:style/Theme.Dialog">
        <item name="android:layout_width">2px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/set_bg</item>
    </style>
    <!--清点的tab-->
    <style name="tab_point_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/tab_point_text</item>
        <item name="android:state_checked">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/selector_stock_in_point</item>
    </style>
    <!--用户信息界面显示的textview-->
    <style name="tv_userinfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80px</item>
        <item name="android:layout_marginBottom">4px</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:paddingLeft">10px</item>
        <item name="android:layout_marginRight">30px</item>
        <item name="android:layout_marginTop">10px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_set_userinfo</item>
    </style>
    <!--popwindow 弹出的动画-->
    <style name="popWindow_animation_top">
        <item name="android:windowEnterAnimation">@anim/popwindow_animation_top_in</item>
        <item name="android:windowExitAnimation">@anim/popwindow_animation_top_out</item>
    </style>
    <style name="popWindow_animation_push">
        <item name="android:windowEnterAnimation">@anim/popupwindow_enter</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_exit</item>
    </style>
</resources>
