<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/set_bg"
                android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rl_home_botom"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10px">

        <RadioButton
            android:id="@+id/rd_home_home"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/selector_home"
            android:gravity="center"
            android:text="@string/home"
            />

        <RadioButton
            android:id="@+id/rd_home_set"
            style="@style/tab_menu_item"
            android:drawableTop="@drawable/selector_home_set"
            android:gravity="center"
            android:text="@string/home_set"
            />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/fl_home_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="2px"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_home_botom"
        />
</RelativeLayout>
