<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.timi.sz.wms_android.mvp.UI.stock_out.batch_normal.BatchNormalActivity">
    <include layout="@layout/title_head"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:text="@string/item_material_code"
            android:textColor="#333"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_material_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="55px"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:text="@string/item_material_name"
            android:textColor="#333"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_material_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="55px"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_mateZrial_attr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:text="@string/item_material_model"
            android:textColor="#333"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_material_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="55px"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_send_material_total_num_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:text="@string/send_material_num_tip"
            android:textColor="#333"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_send_material_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="55px"
            android:text=""
            android:textColor="@color/login_txt_color"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:text="@string/have_get_total_num_tip"
            android:textColor="#333"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_have_get_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="55px"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_can_get_total_num_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:text="@string/can_get_total_num_tip"
            android:textColor="#333"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_can_get_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="55px"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_send_material_lib_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:text="@string/send_material_lib_tip"
            android:textColor="#333"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_send_material_lib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="55px"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:text="@string/controll_type_tip"
            android:textColor="#333"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_controll_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="55px"
            android:text=""
            android:textColor="@color/login_txt_color"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_carton"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="30px"
            android:background="@color/divide_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carton_num_tip"
                android:textColor="#333"/>

            <TextView
                android:id="@+id/tv_carton_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"
                android:layout_weight="1"
                android:textColor="#333"/>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginRight="30px"
                android:background="@drawable/selector_btn_bg_login"
                android:text="+"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="30px"
        android:background="@color/divide_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px">

        <TextView
            android:id="@+id/tv_material_scan_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="30px"
            android:text="@string/scan_material"
            android:textColor="#333"
            android:textSize="13sp"
            />

        <EditText
            android:id="@+id/et_material_scan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20px"
            android:layout_toRightOf="@id/tv_material_scan_tip"
            android:background="@drawable/bg_rectangle_et_focused"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/please_scan_material_code"
            android:imeOptions="actionSearch"
            android:paddingLeft="40px"
            android:paddingRight="80px"
            android:singleLine="true"
            android:text=""
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_material_scan"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:paddingLeft="60px"
            android:src="@mipmap/ic_scan"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_divide"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/divide_color"/>
    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20px"
        android:background="@drawable/selector_btn_bg_login"
        android:text="@string/close"
        android:textColor="#fff"
        android:textSize="18sp"/>
</LinearLayout>
