<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.timi.sz.wms_android.mvp.UI.login.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_bg"/>

    <!-- <include
         android:id="@+id/head_login"
         layout="@layout/title_head" />-->
    <TextView
        android:id="@+id/head_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/login_login"
        android:textColor="#fff"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/head_login"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/logo2"/>

    <TextView
        android:id="@+id/tv_login_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/login_app_name"
        android:textColor="#fff"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_login_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_login_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/login_version"
        android:textColor="#fff"
        android:textSize="20sp"/>

    <RelativeLayout
        android:id="@+id/rl_login_input"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/tv_login_version"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:src="@drawable/bg_rectangle_statuscolor"/>

        <LinearLayout
            android:id="@+id/ll_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20px">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/login_username"/>

            <EditText
                android:id="@+id/et_login_username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"

                android:gravity="center_vertical"
                android:hint="@string/login_input_username"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/ll_username"
            android:background="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/view2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20px">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/login_password"/>

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/login_inpiut_psw"
                android:inputType="textPassword"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_login_eye"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/selector_login_psw"/>
        </LinearLayout>
    </RelativeLayout>

    <CheckBox
        android:id="@+id/cb_login_rempsw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_login_input"
        android:layout_marginLeft="30px"
        android:text="@string/login_remember_psw"
        android:textColorHint="@color/colorPrimary"
        android:textColorLink="@color/colorPrimary"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tv_login_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30px"
        android:gravity="center_horizontal"
        android:text="版权所有：玖坤信息"
        android:textColor="#999"/>

    <LinearLayout
        android:layout_below="@id/cb_login_rempsw"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_bg_login"
            android:text="@string/confirm"
            android:textColor="#fff"
            android:layout_marginRight="5dp"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/btn_set"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_bg_login"
            android:text="配置"
            android:textColor="#fff"
            android:textSize="18sp"/>
    </LinearLayout>
</RelativeLayout>
