<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/set_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_set_qr"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/set_userinfo">

        <ImageView
            android:id="@+id/iv_set_headicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/set_user_org"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_set_headicon"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_set_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="用户名"
                android:textColor="#fff"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_set_usercode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567898876543"
                android:textColor="#fff"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_set_qr"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/set_user_qr"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_set_userinfo"
        style="@style/set_tab_item"
        android:text="@string/set_userinfo"/>

    <TextView
        android:id="@+id/tv_set_deviceinfo"
        style="@style/set_tab_item"
        android:text="@string/set_device_info"/>

    <TextView
        android:id="@+id/tv_set_update_psw"
        style="@style/set_tab_item"
        android:text="@string/set_update_psw"/>

    <TextView
        android:id="@+id/tv_set_about"
        style="@style/set_tab_item"
        android:text="@string/set_about"/>

    <RelativeLayout
        android:id="@+id/rl_set_update_version"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:background="@drawable/bg_set_tab_check"
        >

        <TextView
            android:id="@+id/tv_set_update_version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/set_userinfo_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/set_update_version"/>

        <TextView
            android:id="@+id/tv_set_new_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_set_update_version"
            android:background="@drawable/bg_set_new_version"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="new"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/tv_set_now_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="v 1.0"
            android:textColor="#333"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_set_exit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/set_exit"
        android:textColor="#ffff"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_set_new_version"/>
</LinearLayout>
