<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/set_bg"
    android:orientation="vertical"
    tools:context="com.timi.sz.wms_android.mvp.UI.stock_out.buy_return_material.scan_return_material.ScanReturnMaterialActivity">

    <include layout="@layout/title_head"/>
    <ScrollView
        android:layout_marginTop="100px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_putaway_date"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_scan_return_orderno"
                    style="@style/tv_header"
                    android:text="@string/sip_order_num"
                    />

                <TextView
                    android:id="@+id/tv_scan_return_orderno_date"
                    style="@style/tv_header"
                    android:text="@string/scan_return_orderno_date"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_putaway_arrive"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_scan_return_orderno_from"
                    style="@style/tv_header"
                    android:text="@string/sip_buy_from"
                    />

                <TextView
                    android:id="@+id/tv_scan_return_orderno_buyer"
                    style="@style/tv_header"
                    android:text="@string/sip_buyer"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_putaway_in_stock"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_scan_return_orderno_pro_code"
                    style="@style/tv_header"
                    android:text="@string/stockin_point_pro_num"
                    />

                <TextView
                    android:id="@+id/tv_scan_return_orderno_pro_name"
                    style="@style/tv_header"
                    android:text="@string/stockin_point_pro_name"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_putaway_total_num"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_scan_return_orderno_pro_model"
                    style="@style/tv_header"
                    android:text="@string/stockin_point_promodel"
                    />

                <TextView
                    android:id="@+id/tv_scan_return_orderno_pro_count"
                    style="@style/tv_header"
                    android:text="@string/stockin_point_buynum"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/tab_txt_unselect"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px">

                <TextView
                    android:id="@+id/tv_putaway_scan_material_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="30px"
                    android:text="@string/putaway_scan_material"
                    android:textColor="#333"
                    />

                <TextView
                    android:id="@+id/tv_scan_return_material_material"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20px"
                    android:layout_toRightOf="@id/tv_putaway_scan_material_tip"
                    android:background="@drawable/bg_sbo_rectangle_et"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/please_scan_material_code"
                    android:paddingLeft="20px"
                    android:paddingRight="80px"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv_scan_return_material_scan"
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:paddingLeft="60px"
                    android:src="@mipmap/ic_scan"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_scan_return_orderno_have_returnnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30px"
                android:text="@string/scan_return_orderno_have_returnnum"
                android:textColor="#333"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_scan_material_commit"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/selector_btn_bg_login"
        android:text="@string/confirm_commit"
        android:textColor="#fff"
        android:layout_marginRight="20px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="20px"
        android:textSize="18sp"/>


</RelativeLayout>
