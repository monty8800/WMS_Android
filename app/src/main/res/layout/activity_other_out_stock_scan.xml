<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/set_bg"
    android:orientation="vertical"
    tools:context="com.timi.sz.wms_android.mvp.UI.stock_out.buy_return_material.material.ScanReturnMaterialActivity">

    <include layout="@layout/title_head"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/have_count_num"
                    android:layout_width="wrap_content"
                    android:layout_height="80px"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:paddingTop="10px"
                    android:textColor="#333"
                    />

                <TextView
                    android:id="@+id/tv_have_count_num"
                    android:layout_width="wrap_content"
                    android:layout_height="80px"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:paddingTop="10px"
                    android:text=""
                    android:textColor="#333"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px">

                <TextView
                    android:id="@+id/tv_material_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20px"
                    android:text="@string/scan_material"
                    android:textColor="#333"
                    />

                <TextView
                    android:id="@+id/tv_material_scan"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_material_tip"
                    android:background="@drawable/bg_sbo_rectangle_et"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/please_scan_material_code"
                    android:paddingLeft="20px"
                    android:paddingRight="80px"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv_scan_return_material_scan"
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:paddingLeft="60px"
                    android:src="@mipmap/ic_scan"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80px"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:paddingTop="10px"
                    android:text="@string/material_code"
                    android:textColor="#333"
                    />

                <TextView
                    android:id="@+id/tv_material_code"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:paddingTop="10px"
                    android:textColor="#333"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80px"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:paddingTop="10px"
                    android:text="@string/goods_num"
                    android:textColor="#333"
                    />

                <TextView
                    android:id="@+id/tv_material_num"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:paddingTop="10px"
                    android:textColor="#333"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80px"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:paddingTop="10px"
                    android:text="@string/material_name"
                    android:textColor="#333"
                    />

                <TextView
                    android:id="@+id/tv_material_name"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:paddingTop="10px"
                    android:textColor="#333"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80px"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:paddingTop="10px"
                    android:text="@string/material_model"
                    android:textColor="#333"
                    />

                <TextView
                    android:id="@+id/tv_material_nmodel"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:paddingTop="10px"
                    android:textColor="#333"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_create_other_out_stock_orderno"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@drawable/selector_btn_bg_login"
        android:text="@string/create_other_out_stock_orderno"
        android:textColor="#fff"
        android:textSize="18sp"/>


</RelativeLayout>
