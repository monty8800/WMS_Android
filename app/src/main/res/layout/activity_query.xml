<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_query"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/set_bg"
    android:orientation="vertical"
    tools:context="com.timi.sz.wms_android.mvp.UI.query.QueryActivity">

    <include layout="@layout/title_head"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/query_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:background="#fff"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_query_repertory"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_pro_come_in"
                    android:text="@string/query_repertory"/>

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/set_bg"/>

                <TextView
                    android:id="@+id/tv_query_todayin"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_check"
                    android:text="@string/tv_query_todayin"/>

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/set_bg"/>

                <TextView
                    android:id="@+id/tv_query_todayout"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_create_order"
                    android:text="@string/tv_query_todayout"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:layout_marginBottom="2px"
                android:layout_marginTop="2px"
                android:background="#fff"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_query_in_record"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_pro_come_in"
                    android:text="@string/query_in_record"/>

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/set_bg"/>

                <TextView
                    android:id="@+id/tv_query_materail_sn_from"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_check"
                    android:text="@string/query_materail_sn_from"/>

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/set_bg"/>

                <TextView
                    android:id="@+id/tv_query_pro_sn_from"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_create_order"
                    android:text="@string/query_pro_sn_from"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:layout_marginBottom="2px"
                android:layout_marginTop="2px"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_query_out_record"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_pro_come_in"
                    android:text="@string/query_out_record"/>

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/set_bg"/>

                <TextView
                    android:id="@+id/tv_query_in_total"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_check"
                    android:text="@string/query_in_total"/>

                <View
                    android:layout_width="2px"
                    android:layout_height="wrap_content"
                    android:background="@color/set_bg"/>

                <TextView
                    android:id="@+id/tv_query_out_total"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_create_order"
                    android:text="@string/query_out_total"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
