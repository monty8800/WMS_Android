<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/set_bg"
    android:orientation="vertical"
    tools:context="com.timi.sz.wms_android.mvp.UI.stock_in.putaway.PutAwayActivity">

    <include layout="@layout/title_head"/>
    <ScrollView
        android:layout_marginTop="100px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff">
            <LinearLayout
                android:id="@+id/ll_putaway_date"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_receive_pro_num"
                    style="@style/tv_header"
                    android:text="@string/receive_pro_num"
                    />

                <TextView
                    android:id="@+id/tv_create_orderno_date"
                    style="@style/tv_header"
                    android:text="@string/create_orderno_date"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_putaway_arrive"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_arrive_pro_total_num"
                    style="@style/tv_header"
                    android:text="@string/arrive_good_num"
                    />

                <TextView
                    android:id="@+id/tv_right_pro_num"
                    style="@style/tv_header"
                    android:text="@string/right_pro_num"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_putaway_in_stock"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_in_stock_num"
                    style="@style/tv_header"
                    android:text="@string/in_stock_num"
                    />

                <TextView
                    android:id="@+id/tv_can_in_stock_num"
                    style="@style/tv_header"
                    android:text="@string/can_in_stock_num"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_putaway_total_num"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_wait_count_num"
                    style="@style/tv_header"
                    android:text="@string/wait_count_num"
                    />

                <TextView
                    android:id="@+id/tv_have_count_num"
                    style="@style/tv_header"
                    android:text="@string/have_count_num"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_putaway_total_instock_num"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_in_stock_total_num"
                    style="@style/tv_header"
                    android:text="@string/in_stock_total_num"
                    />

                <TextView
                    android:id="@+id/tv_putaway_orderno_num"
                    style="@style/tv_header"
                    android:visibility="invisible"
                    />
            </LinearLayout>
            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/tab_txt_unselect"/>
            <TextView
                android:id="@+id/tv_putaway_have_scan_num"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:textColor="#333"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:visibility="gone"
                android:text="@string/have_scan_num"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px">

                <TextView
                    android:id="@+id/tv_putaway_scan_location_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20px"
                    android:layout_centerVertical="true"
                    android:text="@string/lib_code"
                    android:textColor="#333"
                    />
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_putaway_scan_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20px"
                    android:layout_toRightOf="@id/tv_putaway_scan_location_tip"
                    android:background="@drawable/bg_sbo_rectangle_et"
                    android:ellipsize="end"
                    android:hint="@string/please_scan_lib_location_code"
                    android:paddingLeft="20px"
                    android:paddingRight="80px"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv_putaway_scan_location"
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:paddingLeft="60px"
                    android:src="@mipmap/ic_scan"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px">

                <TextView
                    android:id="@+id/tv_putaway_scan_material_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="48px"
                    android:layout_centerVertical="true"
                    android:text="@string/scan_material"
                    android:textColor="#333"
                    />
                <TextView
                    android:id="@+id/tv_putaway_scan_material"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20px"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@id/tv_putaway_scan_material_tip"
                    android:background="@drawable/bg_sbo_rectangle_et"
                    android:ellipsize="end"
                    android:hint="@string/please_scan_material_code"
                    android:paddingLeft="20px"
                    android:paddingRight="80px"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv_putaway_scan_material"
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:paddingLeft="60px"
                    android:src="@mipmap/ic_scan"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_putaway_material_code"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:paddingLeft="48px"
                android:paddingTop="10px"
                android:text="@string/material_code"
                android:textColor="#333"
                />

            <TextView
                android:id="@+id/tv_putaway_material_num"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:paddingLeft="48px"
                android:paddingTop="10px"
                android:text="@string/material_num"
                android:textColor="#333"
                />
            <TextView
                android:id="@+id/tv_putaway_material_name"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:paddingLeft="48px"
                android:paddingTop="10px"
                android:text="@string/material_name"
                android:textColor="#333"
                />
            <TextView
                android:id="@+id/tv_putaway_material_nmodel"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:paddingLeft="48px"
                android:paddingTop="10px"
                android:text="@string/material_model"
                android:textColor="#333"
                />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_bg_login"
        android:text="@string/confirm_commit"
        android:textColor="#fff"
        android:layout_marginLeft="50px"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50px"
        android:layout_marginBottom="20px"
        android:textSize="18sp"/>
</RelativeLayout>
