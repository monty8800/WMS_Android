<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10px"
              android:layout_marginLeft="30px"
              android:layout_marginRight="30px"
              android:layout_marginTop="24px"
              android:background="@drawable/bg_rectangle_et_unfocused"
              android:orientation="vertical"
              android:paddingBottom="20px">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:paddingTop="10px"
        android:text="@string/material_info"
        android:textColor="#333"
        android:textSize="14sp"
        android:textStyle="bold"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d7d7dd"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingTop="20px">

        <TextView
            android:layout_width="140px"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/arrive_orderno_tip"
            android:textColor="#333"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_orderno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingTop="20px">

        <TextView
            android:layout_width="140px"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/item_receive_material_date"
            android:textColor="#333"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_receive_material_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingTop="20px">

        <TextView
            android:layout_width="140px"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/order_no_tip"
            android:textColor="#333"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingTop="20px">

        <TextView
            android:layout_width="140px"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/item_supplier"
            android:textColor="#333"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_supplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@drawable/bg_quality_normal_divider"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingTop="20px">

        <TextView
            android:layout_width="140px"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/item_material_code"
            android:textColor="#333"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_material_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingTop="20px">

        <TextView
            android:layout_width="140px"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/item_material_name"
            android:textColor="#333"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_material_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingTop="20px">

        <TextView
            android:layout_width="140px"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/item_material_model"
            android:textColor="#333"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_material_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingTop="20px">

        <TextView
            android:layout_width="140px"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/item_material_attr"
            android:textColor="#333"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_material_attr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"
            />
    </LinearLayout>
</LinearLayout>

