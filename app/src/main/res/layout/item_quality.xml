<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#e7e7ed"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="24px"
        android:background="@drawable/bg_quality_item_white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_tab"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_below="@id/head"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_quality_status"
                android:layout_width="0dp"
                android:layout_height="60px"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:src="@mipmap/quality_wait_quality"
                />

            <TextView
                android:id="@+id/tv_material_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text=""
                android:textSize="24px"/>

            <TextView
                android:id="@+id/tv_receive_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="0"
                android:textSize="24px"/>

            <TextView
                android:id="@+id/tv_send_quality_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="0"
                android:textSize="24px"/>

            <TextView
                android:id="@+id/tv_quality_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"

                android:text="0"
                android:textSize="24px"/>

            <RelativeLayout
                android:id="@+id/rl_quality_result"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                >

                <TextView
                    android:id="@+id/tv_quality_result"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="待检"
                    android:textSize="24px"/>

                <ImageView
                    android:id="@+id/iv_next_page"
                    android:layout_width="wrap_content"
                    android:layout_height="30px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:layout_toRightOf="@id/tv_quality_result"
                    android:src="@mipmap/set_next_page"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_margin="1dp"
            android:background="@drawable/bg_quality_item_blue"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="10px"
            android:paddingRight="10px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_material_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="滑轨双孔梁496-蓝色"
                    android:textColor="#666"
                    android:textSize="22px"/>

                <TextView
                    android:id="@+id/tv_arrive_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/item_arrive_date"
                    android:textColor="#666"
                    android:textSize="22px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_supplier"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="深圳超然科技股份有限公司"
                    android:textColor="#666"
                    android:textSize="22px"/>

                <TextView
                    android:id="@+id/tv_arrive_orderno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/item_arrive_orderno"
                    android:textColor="#666"
                    android:textSize="22px"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:visibility="gone"
        android:id="@+id/view_divide_bottom"
        android:layout_width="match_parent"
        android:layout_height="24px"/>
</LinearLayout>
