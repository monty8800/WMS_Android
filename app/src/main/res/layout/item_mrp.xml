<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#e7e7ed"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="24px"
        android:background="@drawable/bg_quality_item_white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_tab"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_below="@id/head"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_mrp_line_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="0"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_mrp_material_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text=""
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_mrp_receive_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="0"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_mrp_sample_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="0"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_mrp_quality_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="0"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_mrp_badness_percen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="0"
                android:textColor="#1cb2ff"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_margin="1dp"
            android:background="@drawable/bg_quality_item_blue"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="30px"
            android:paddingRight="10px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mrp_material_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="滑轨双孔梁496-蓝色"
                    android:textColor="#666"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/tv_mrp_quality_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tv_mrp_quality_date"
                    android:textColor="#666"
                    android:textSize="11sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mrp_supplier"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="深圳超然科技股份有限公司"
                    android:textColor="#666"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/tv_mrp_arrive_orderno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/item_arrive_orderno"
                    android:textColor="#666"
                    android:textSize="11sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_divide_bottom"
        android:layout_width="match_parent"
        android:layout_height="24px"
        android:visibility="gone"/>
</LinearLayout>
