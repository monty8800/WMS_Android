<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#e7e7ed"
              android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:background="@drawable/bg_quality_item_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_line_name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:gravity="center"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="@string/line_name"
                android:textColor="#333"
                android:textSize="26px"/>


            <TextView
                android:id="@+id/tv_material_code"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:gravity="center"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="@string/item_material_code"
                android:textColor="#333"
                android:textSize="26px"/>

            <TextView
                android:id="@+id/tv_point_num"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="@string/point_num"
                android:textColor="#333"
                android:textSize="26px"/>


            <TextView
                android:id="@+id/tv_spare_num"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="@string/spare_num"
                android:textColor="#333"
                android:textSize="26px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/bg_quality_item_blue"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="30px"
            android:paddingRight="10px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_material_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="滑轨双孔梁496-蓝色"
                    android:textColor="#666"
                    android:textSize="22px"/>

                <TextView
                    android:id="@+id/tv_point_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/item_point_date"
                    android:textColor="#666"
                    android:textSize="22px"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
