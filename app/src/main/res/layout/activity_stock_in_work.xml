<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_stock_in_work"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/set_bg"
              android:orientation="vertical"
              tools:context="com.timi.sz.wms_android.mvp.UI.stock_in_work.StockInWorkActivity">

    <include layout="@layout/title_head"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:scaleType="centerCrop"
                android:src="@mipmap/stock_in_work_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:layout_marginTop="2px"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_siw_storage_location_change"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_pro_come_in"
                    android:text="@string/siw_storage_location_change"/>
                <View
                    style="@style/LineDirection"/>
                <TextView
                    android:id="@+id/tv_siw_scan_in"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_check"
                    android:text="@string/siw_scan_in"/>
                <View
                    style="@style/LineDirection"/>
                <TextView
                    android:id="@+id/tv_siw_one_step_in"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_create_order"
                    android:text="@string/siw_one_step_in"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:layout_marginTop="2px"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_siw_group_change"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_pro_come_in"
                    android:text="@string/siw_group_change"/>
                <View
                    style="@style/LineDirection"/>
                <TextView
                    android:id="@+id/tv_siw_form_change_stock_out"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_check"
                    android:text="@string/siw_form_change_stock_out"/>
                <View
                    style="@style/LineDirection"/>
                <TextView
                    android:id="@+id/tv_siw_form_change_stock_in"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_create_order"
                    android:text="@string/siw_form_change_stock_in"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:layout_marginTop="2px"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_siw_query_repertory"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_pro_come_in"
                    android:text="@string/siw_query_repertory"/>
                <View
                    style="@style/LineDirection"/>
                <TextView
                    android:id="@+id/tv_siw_check"
                    style="@style/stock_in_tab"
                    android:drawableTop="@mipmap/stock_in_check"
                    android:text="@string/siw_check"/>
                <TextView
                    android:id="@+id/tv_stock_in_create_order"
                    style="@style/stock_in_tab"
                    android:visibility="invisible"
                    android:drawableTop="@mipmap/stock_in_create_order"
                    android:text="@string/stock_in_create_order"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
