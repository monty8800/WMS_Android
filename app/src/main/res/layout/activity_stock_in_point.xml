<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_stock_in_point"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/set_bg"
    android:orientation="vertical"
    tools:context="com.timi.sz.wms_android.mvp.UI.stock_in.point.StockInPointActivity">

    <include layout="@layout/title_head"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rd_stock_in_point"
            style="@style/tab_point_item"
            android:text="@string/stock_in_point"
            />

        <RadioButton
            android:id="@+id/rd_stock_in_record"
            style="@style/tab_point_item"
            android:text="@string/stock_in_point_record"
            />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sip_buy_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="订单号：%1$s"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/tv_sip_buy_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="采购日期：%1$s"
            android:textColor="#333"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sip_buy_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="供应商：%1$s"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/tv_sip_buyer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="采购员：%1$s"
            android:textColor="#333"/>
    </LinearLayout>


</LinearLayout>
