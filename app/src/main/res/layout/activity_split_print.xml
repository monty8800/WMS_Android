<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.timi.sz.wms_android.mvp.UI.stock_out.divide_print.SplitPrintActivity">
    　　

    <include
        android:id="@+id/title"
        layout="@layout/title_head"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_head_title"
                android:layout_width="match_parent"
                android:layout_height="96px"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:paddingTop="10px"
                android:visibility="gone"
                android:text="委外发料（审核）数量拆分"
                android:textColor="#333"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="10px"
                android:layout_marginTop="10px"
                android:background="#d7d7dd"
                />

            <RelativeLayout
                android:id="@+id/rl_show_print"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:text="打印机"
                    android:gravity="center_vertical"
                    android:textColor="#333"
                    android:textSize="13sp"/>

                <ImageView
                    android:id="@+id/iv_print"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:src="@drawable/selector_divide_print"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="10px"
                android:layout_marginTop="10px"
                android:background="#d7d7dd"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:text="@string/material_barcode_tip"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_barcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:visibility="gone"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:text="@string/header_batch_lib_code"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_lib_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="12sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:visibility="gone"
                android:layout_marginBottom="10px"
                android:layout_marginTop="10px"
                android:background="#d7d7dd"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:text="@string/item_material_code"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_material_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:text="@string/item_material_name"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_material_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:text="@string/item_material_model"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_material_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:text="@string/item_material_attr"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_material_attr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="12sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="20px"
                android:layout_marginTop="20px"
                android:background="@color/divide_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:text="@string/stock_query_batch"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_batch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:text="@string/current_num_tip"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_current_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="12sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divide_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:text="@string/divide_num_tip"
                    android:textColor="#666"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/et_divide_num"
                    android:layout_width="551px"
                    android:layout_height="64px"
                    android:layout_marginLeft="30px"
                    android:background="@drawable/selector_et"
                    android:paddingLeft="20px"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="12sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divide_color"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_print_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="54px"
                    android:background="@color/divide_color"
                    android:gravity="center_vertical"
                    android:paddingLeft="30px"
                    android:text="已搜索到的打印机"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rlv_print"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_marginBottom="20px"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="0dp"
            android:layout_height="88px"
            android:layout_margin="3px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_bg_login"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="88px"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_gray"
            android:text="@string/cancel"/>
    </LinearLayout>
</RelativeLayout>