<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginRight="20px"
              >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:text="评审结果："
        android:visibility="invisible"
        android:textColor="#333"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="20px"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_mrp_review_result"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pick"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:gravity="center_vertical"
            android:text="@string/quality_pick"/>

        <TextView
            android:id="@+id/tv_special_get"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:text="@string/quality_special_get"/>

        <TextView
            android:id="@+id/tv_all_return"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:text="@string/quality_all_return"/>
    </LinearLayout>
</LinearLayout>
