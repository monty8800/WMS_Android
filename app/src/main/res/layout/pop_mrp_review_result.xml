<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ddd"
              android:orientation="horizontal"
    >


    <LinearLayout
        android:layout_width="538px"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="1dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingLeft="10px"
        android:orientation="vertical"
       >

        <TextView
            android:id="@+id/tv_pick"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:gravity="center_vertical"
            android:text="@string/quality_pick"/>

        <TextView
            android:id="@+id/tv_special_get"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:text="@string/quality_special_get"/>

        <TextView
            android:id="@+id/tv_all_return"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:text="@string/quality_all_return"/>
        <TextView
            android:id="@+id/tv_right_get"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:text="@string/quality_right_get"/>
    </LinearLayout>
</LinearLayout>
