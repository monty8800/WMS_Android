<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <TextView
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_sbo_rectangle_et"
        android:gravity="center"
        android:text="查询条件"
        android:textColor="#666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp"/>

   <android.support.constraint.ConstraintLayout
       android:layout_width="0dp"
       android:layout_height="0dp"
       >
       <TextView
           android:id="@+id/tv_start_time_tip"
           android:layout_width="wrap_content"
           android:layout_height="44dp"
           android:gravity="center"
           app:layout_editor_absoluteX="50px"
           app:layout_constraintBottom_toBottomOf="parent"
           android:text="包装条码：："
           android:textColor="#666"
           />

       <TextView
           android:layout_width="0dp"
           android:layout_height="88px"
           android:text="2017-06-14"
           android:gravity="center_vertical"
           android:background="@drawable/bg_set_userinfo"
           android:padding="20px"
           app:layout_constraintBaseline_toBaselineOf="@id/tv_start_time_tip"
           app:layout_constraintLeft_toRightOf="@id/tv_start_time_tip"
           app:layout_constraintRight_toRightOf="parent"/>

   </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
