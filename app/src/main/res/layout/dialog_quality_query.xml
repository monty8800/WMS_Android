<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     xmlns:tools="http://schemas.android.com/tools"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:orientation="horizontal"
    >

    <View
        android:id="@+id/view_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="654px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="50px"
            android:text="时间段选择"
            android:textColor="#333"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="@string/start_time_tip"
                android:textColor="#333"
                android:textSize="12sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="192px"
                android:layout_height="58px"
                android:layout_marginLeft="20px"
                android:background="@drawable/bg_rectangle_gray"
                android:gravity="center"
                android:text="@string/please_choose"
                android:textColor="#333"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="@string/end_time_tip"
                android:textColor="#333"
                android:textSize="12sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="192px"
                android:layout_height="58px"
                android:layout_marginLeft="20px"
                android:background="@drawable/bg_rectangle_gray"
                android:gravity="center"
                android:text="@string/please_choose"
                android:textColor="#333"
                android:textSize="13sp"/>
        </LinearLayout>

        <View
            android:layout_width="580px"
            android:layout_height="1dp"
            android:layout_marginLeft="40px"
            android:layout_marginTop="20px"
            android:background="#eee"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="30px"
            android:text="@string/materail_info"
            android:textColor="#333"
            android:textSize="24px"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="@string/arrive_orderno_tip"
                android:textColor="#333"
                android:textSize="12sp"
                android:textStyle="normal"/>

            <EditText
                android:id="@+id/et_arrive_orderno"
                android:layout_width="466px"
                android:layout_height="58px"
                android:layout_marginLeft="20px"
                android:background="@drawable/bg_rectangle_gray"
                android:hint="@string/please_input_arrive_orderno"
                android:paddingLeft="20px"
                android:textColor="#333"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="@string/item_material_code"
                android:textColor="#333"
                android:textSize="12sp"
                android:textStyle="normal"/>

            <EditText
                android:id="@+id/et_material_code"
                android:layout_width="466px"
                android:layout_height="58px"
                android:layout_marginLeft="20px"
                android:background="@drawable/bg_rectangle_gray"
                android:hint="@string/please_input_material_code"
                android:paddingLeft="20px"
                android:textColor="#333"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="@string/item_material_name"
                android:textColor="#333"
                android:textSize="12sp"
                android:textStyle="normal"/>

            <EditText
                android:id="@+id/et_material_name"
                android:layout_width="466px"
                android:layout_height="58px"
                android:layout_marginLeft="20px"
                android:background="@drawable/bg_rectangle_gray"
                android:hint="@string/please_input_material_name"
                android:paddingLeft="20px"
                android:textColor="#333"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:paddingLeft="24px"
                android:text="@string/item_supplier"
                android:textColor="#333"
                android:textSize="12sp"
                android:textStyle="normal"/>

            <EditText
                android:id="@+id/et_supplier"
                android:layout_width="466px"
                android:layout_height="58px"
                android:layout_marginLeft="20px"
                android:background="@drawable/bg_rectangle_gray"
                android:hint="@string/please_input_supplier_name"
                android:paddingLeft="20px"
                android:textColor="#333"
                android:textSize="13sp"/>
        </LinearLayout>

        <View
            android:layout_width="580px"
            android:layout_height="1dp"
            android:layout_marginLeft="40px"
            android:layout_marginTop="20px"
            android:background="#eee"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="30px"
            android:text="@string/scan_code"
            android:textColor="#333"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58px"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pack_code"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:layout_marginLeft="40px"
                android:layout_marginStart="40px"
                android:gravity="center"
                android:text="包装条码"
                android:textColor="#333"
                android:textSize="12sp"
                />

            <EditText
                android:id="@+id/et_pack_code"
                android:layout_width="466px"
                android:layout_height="58px"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/tv_pack_code"
                android:background="@drawable/bg_rectangle_gray"
                android:hint="@string/please_input_supplier_name"
                android:paddingLeft="20px"
                android:textColor="#333"
                android:textSize="13sp"
                />

            <ImageView
                android:id="@+id/iv_pack_scan"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:scaleType="center"
                android:src="@mipmap/quality_scan"
                />
        </RelativeLayout>

        <View
            android:layout_width="580px"
            android:layout_height="1dp"
            android:layout_marginLeft="40px"
            android:layout_marginTop="20px"
            android:background="#eee"/>

        <View
            android:layout_width="580px"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_dialog_quality_btn"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/tab_txt_unselect"
                android:textSize="16sp"/>

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:background="@color/dialog_divider"/>

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffb708"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
