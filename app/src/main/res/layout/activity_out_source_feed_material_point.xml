<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.timi.sz.wms_android.mvp.UI.stock_out.outsource_feeed.OutSourceFeedMaterialPointActivity">

    <include layout="@layout/title_head"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_head_title"
                android:layout_width="match_parent"
                android:layout_height="72px"
                android:gravity="center_vertical"
                android:paddingLeft="30px"
                android:paddingTop="10px"
                android:text="@string/material_info"
                android:textColor="#333"
                android:textSize="28px"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divide_color"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:text="@string/item_material_code"
                    android:textColor="#333"
                    android:textSize="26px"/>

                <TextView
                    android:id="@+id/tv_material_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="55px"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="26px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:text="@string/item_material_name"
                    android:textColor="#333"
                    android:textSize="26px"/>

                <TextView
                    android:id="@+id/tv_material_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="55px"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="26px"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:text="@string/item_material_model"
                    android:textColor="#333"
                    android:textSize="26px"/>

                <TextView
                    android:id="@+id/tv_material_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="55px"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="26px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_strict_name_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:text="@string/item_material_attr"
                    android:textColor="#333"
                    android:textSize="26px"/>

                <TextView
                    android:id="@+id/tv_material_attr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="55px"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="26px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_send_material_total_num_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:text="@string/send_material_num_tip"
                    android:textColor="#333"
                    android:textSize="26px"/>

                <TextView
                    android:id="@+id/tv_send_material_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="55px"
                    android:text=""
                    android:textColor="@color/login_txt_color"
                    android:textSize="26px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20px"
                    android:text="@string/have_get_total_num_tip"
                    android:textColor="#333"
                    android:textSize="26px"/>

                <TextView
                    android:id="@+id/tv_have_get_total_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="55px"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="26px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_can_get_total_num_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20px"
                    android:text="@string/can_get_total_num_tip"
                    android:textColor="#333"
                    android:textSize="26px"/>

                <TextView
                    android:id="@+id/tv_can_get_total_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="55px"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="26px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_send_material_lib_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:text="@string/send_material_lib_tip"
                    android:textColor="#333"
                    android:textSize="26px"/>

                <TextView
                    android:id="@+id/tv_send_material_lib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="55px"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="26px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:text="@string/controll_type_tip"
                    android:textColor="#333"
                    android:textSize="26px"/>

                <TextView
                    android:id="@+id/tv_controll_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="55px"
                    android:text=""
                    android:textColor="@color/login_txt_color"
                    android:textSize="26px"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="30px"
                android:background="@color/divide_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20px"
                android:layout_height="88px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70px"
                    android:text="@string/bar_code_tip"
                    android:textColor="#333"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="72px"
                    android:layout_marginRight="20px"
                    android:layout_marginLeft="60px"
                    android:background="@drawable/selector_et"/>
            </LinearLayout>

            <View
                android:id="@+id/view_divide"
                android:layout_width="match_parent"
                android:layout_height="24px"
                android:layout_below="@id/rl_top_menu"
                android:background="@color/divide_color"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_orderno_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20px"
        android:background="@drawable/selector_btn_bg_login"
        android:text="@string/close"
        android:textColor="#fff"
        android:textSize="18sp"/>
</LinearLayout>
